<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/email_button_color_pressed"
                android:width="2dp"
                ></stroke>
            <corners android:radius="@dimen/base_login_button_corner_radius" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/email_button_color"
                android:width="1dp"
                ></stroke>
            <corners android:radius="@dimen/base_login_button_corner_radius" />

        </shape>
    </item>
</selector>